<?xml version="1.0" encoding="UTF-8"?>
<presets xmlns="http://josm.openstreetmap.de/tagging-preset-1.0" 
    shortdescription="Wheelchair Preset for Vespucci and JOSM"
    description="Wheelchair preset for Vespucci and JOSM, based on the original JOSM version">
<!--
    Icons have been derived from mainly from
 
    http://osm-icons.org/

    Format description: https://josm.openstreetmap.de/wiki/TaggingPresets
-->
  <!--  Groups -->
  <group name="Wheelchair" icon="wheelchair.png">
        <item name="Wheelchair access" icon="wheelchair.png" type="node,way,closedway,relation" preset_name_label="true">
            <link href="http://wiki.openstreetmap.org/wiki/Tag:wheelchair" />
            <space />
            <combo key="wheelchair" text="Wheelchairs" values_searchable="true" values_sort="false">
            <list_entry value="designated" short_description="Dedicated facilities" />
            <list_entry value="yes" short_description="Unrestricted access" />
            <list_entry value="limited" short_description="Partial access" />
            <list_entry value="no" short_description="No access" />          
            </combo>
            <preset_link preset_name="Wheelchair details" />
        </item> <!-- Wheelchair access -->
        <item name="Wheelchair details" icon="wheelchair.png" type="node,way,closedway,relation" preset_name_label="true">
            <link href="http://wiki.openstreetmap.org/wiki/Tag:wheelchair" />
            <space />   
        	<text key="wheelchair:description" text="Details" i18n="true" />
			<text key="wheelchair:entrance_width" text="Entrance width in cm"/>
			<text key="wheelchair:step_height" text="Step height in cm"/>
			<text key="wheelchair:rooms" text="Number of rooms suitable for wheelchairs"/>
			<text key="wheelchair:places" text="Number of wheelchair seating places in cinemas and similar"/>
			<combo key="centralkey" text="Master key type" values="eurokey,mlak,nks"/>
		</item> <!-- Wheelchair details -->
    </group> <!-- Wheelchair -->
</presets>
